<% content_for :page_title do %>Forgot your password<% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">User Details</h3>
    </div>
    <div class="panel-body">
    	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= f.error_notification %>
			<div class="form-group">
		        <%= f.input :email, class: "text-field form-control", required: true, autofocus: true %>
			</div>
			<div class="form-group">
	          <%= f.button :submit, class: "btn btn-lg btn-primary btn-block", "Send me reset password instructions" %>
	        </div>
        <% end %>
    </div>
    <div class="panel-footer">
    	<%= render "devise/shared/links" %>
    </div>
</div>
</div>
