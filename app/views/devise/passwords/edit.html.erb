<% content_for :page_title do %>Change your password<% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Change your password</h3>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :reset_password_token, class: "text-field form-control" as: :hidden %>
          <%= f.full_error :reset_password_token %>
        </div>

        <div class="form-group">
          <%= f.input :password, class: "text-field form-control" label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
        </div>

        <div class="form-group">
          <%= f.button :submit, class: "btn btn-lg btn-primary btn-block", "Change my password" %>
        </div>
      <% end %>
    </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>

