<% content_for :page_title do %>Resend unlock instructions<% end %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
<div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Resend unlock instructions</h3>
    </div>
    <div class="panel-body">
    	<%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    	<%= f.error_notification %>
    	<%= f.full_error :unlock_token %>

    	<div class="form-group">
    		<%= f.input :email, required: true, class: "text-field form-control", autofocus: true %>
        </div>

        <div class="form-group">
        	<%= f.button :submit, class: "btn btn-lg btn-primary btn-block", "Resend unlock instructions" %>
        </div>

    	<% end %>
    </div>
    <div class="panel-footer">
    	<%= render "devise/shared/links" %>
    </div>
</div>
</div>


