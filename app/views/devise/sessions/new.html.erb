<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Login</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
                            <fieldset>
                                <div class="form-group">
                                    <%= f.text_field :login, placeholder: "E-mail or Username", class: "form-control", html: {spellcheck: "false"} %>
                                </div>
                                <div class="form-group">
                                    <%= f.password_field :password, placeholder: "Password", class: "form-control", html: {autocomplete: "off"} %>
                                </div>
                                <% if devise_mapping.rememberable? -%>
                                  <div class="checkbox">
                                      <label>
                                          <%= f.check_box :remember_me %>Remember Me
                                      </label>
                                  </div>
                                <% end -%>
                                <!-- Change this to a button or input when using this as a form -->
                                <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>

                                <div class="form-group">
                                  <div class="col-md-offset-4 col-md-8">
                                    <%= render "devise/shared/links" %>
                                  </div>
                                </div>
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
