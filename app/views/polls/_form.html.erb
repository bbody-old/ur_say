
    <%= form_for @poll, :html => { :class => 'form-horizontal form-model' } do |f| %>
      <div class="form-group">
        <%= f.label :question %>
        <%= f.text_area :question, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :subtext %>
        <%= f.text_area :subtext, class: 'form-control' %>
        <p class="help-block">(Optional) Information to clarify the question.</p>
      </div>
      <div class="form-group">
        <%= f.submit nil, :class => 'btn btn-default' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                polls_path, :class => 'btn btn-default' %>
      </div>
    <% end %>