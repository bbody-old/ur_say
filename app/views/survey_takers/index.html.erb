<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Survey Taker</h3>
                    </div>                      
                    <div class="panel-body">
                        <% if @survey_takers.nil? && params[:search].nil? %>
                            <%= render partial: "find" %>
                        <% elsif @survey_takers.nil? or @survey_takers.count == 0 %>
                            <p>
                                Could not find any registrations with that number.
                            </p>
                            <%= render partial: "find" %>
                        <% else %>
                            <h4><%= @survey_takers.first.number %></h4>
                            <p>
                                <% if @survey_takers.first.confirmed == 0 %>
                                    Please confirm your account.
                                <% else %>
                                    Your account has been activated.
                                <% end %>
                            </p>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>